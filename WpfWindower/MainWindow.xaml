<Window x:Class="WpfWindower.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfWindower"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded"
        >
    <Grid>
        <Popup x:Name="RhombusPopup"
               Placement="Center"
               AllowsTransparency="True">
            <Grid>
                <Polygon Points="50,0 100,50 50,100 0,50" Fill="Red" />
            </Grid>
        </Popup>
        <Popup x:Name="OverlayPopup"
               Placement="Center"
               AllowsTransparency="True">
            <Border x:Name="OverlayBorder" Background="#80000000" CornerRadius="10" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Button x:Name="CloseOverlayButton"
                            Grid.Row="0"
                            Content="✕"
                            Width="22" Height="22"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="#66000000"
                            Foreground="White"
                            BorderBrush="Transparent"
                            FontWeight="Bold"
                            Padding="0"
                            Click="CloseOverlayButton_Click"/>
                    <ItemsControl x:Name="OverlayItems" Grid.Row="1">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Foreground="White" FontSize="20" TextWrapping="Wrap" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</Window>

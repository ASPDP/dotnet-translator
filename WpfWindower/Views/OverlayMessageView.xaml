<UserControl x:Class="WpfWindower.Views.OverlayMessageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <Border x:Name="OverlayBorderElement" Background="#80000000" CornerRadius="10" Padding="20">
        <Grid Margin="-12,-20,-15,-4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="135*" />
                <RowDefinition Height="113*"/>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ProgressBar x:Name="ElapsedProgressBarElement"
                        Grid.Row="1"
                        Height="6"
                        Minimum="0"
                        Maximum="1"
                        Value="0"
                        Margin="0,0,0,12"
                        Foreground="#FF4CAF50"
                        Background="#33000000"
                        BorderBrush="Transparent"
                        Visibility="Collapsed" />
            <ItemsControl x:Name="OverlayItemsControl" Grid.Row="2" Grid.RowSpan="2">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   Foreground="White"
                                   FontSize="20"
                                   TextWrapping="Wrap" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <ItemsControl x:Name="VariantsItemsControl" Grid.Row="4" Visibility="Collapsed" Grid.RowSpan="2">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,4,0,0"
                                    ToolTipService.ShowDuration="60000"
                                    MouseEnter="VariantItem_MouseEnter"
                                    MouseLeave="VariantItem_MouseLeave">
                            <StackPanel.ToolTip>
                                <ToolTip>
                                    <TextBlock Text="{Binding Explanation}"
                                               FontSize="16"
                                               MaxWidth="400"
                                               TextWrapping="Wrap" />
                                </ToolTip>
                            </StackPanel.ToolTip>
                            <TextBlock Text="{Binding Header}"
                                       Foreground="#FFBBD5FF"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       TextWrapping="Wrap" />
                            <ItemsControl ItemsSource="{Binding Lines}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                   FontSize="18"
                                                   TextWrapping="Wrap">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="White" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.HasExplanation, RelativeSource={RelativeSource AncestorType={x:Type StackPanel}}}" Value="True">
                                                            <Setter Property="Foreground" Value="#FFFF6B6B" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <Button x:Name="CloseButtonElement"
                    Content="x"
                    Background="#66000000"
                    Foreground="White"
                    BorderBrush="Transparent"
                    FontWeight="Bold"
                    Padding="0" Click="CloseButtonElement_Click" Margin="0,-4,-3,0" Grid.RowSpan="3" HorizontalAlignment="Right" Width="17" Height="16" VerticalAlignment="Top" />
        </Grid>
    </Border>
</UserControl>

{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch WpfWindower",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-wpf",
            "program": "${workspaceFolder}/WpfWindower/bin/Debug/net9.0-windows/WpfWindower.exe",
            "cwd": "${workspaceFolder}/WpfWindower",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch HotkeyListener",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-hotkey",
            "program": "${workspaceFolder}/HotkeyListener/bin/Debug/net9.0-windows/HotkeyListener.exe",
            "cwd": "${workspaceFolder}/HotkeyListener",
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "WpfWindower & HotkeyListener",
            "configurations": ["Launch WpfWindower", "Launch HotkeyListener"]
        }
    ]
}